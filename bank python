    "class Account:\n",
    "    balance = 0.0\n",
    "\n",
    "def display_balance(self):\n",
    "    print(f\"Net balance is: Rs {self.balance}\")\n",
    "\n",
    "def deposit(self):\n",
    "    amount = float(input(\"Enter amount to be deposit: \"))\n",
    "    self.balance += amount\n",
    "    print(f\"Amount deposited: Rs {amount}\")\n",
    "\n",
    "def withdraw(self):\n",
    "    amount = float(input(\"Enter amount to be withdrawal: \"))\n",
    "    if self.balance >= amount:\n",
    "        self.balance -= amount\n",
    "        print(f\"Amount withdrawn: Rs {amount}\")\n",
    "        \n",
    "    else:\n",
    "        print(\"Insufficient balance for withdrawal.\")\n",
    "\n",
    "def login():\n",
    "    username = input(\"Enter your username: \")\n",
    "    password = input(\"Enter your password: \")\n",
    "    print(f\"Login successful! Welome, {username}.\")\n",
    "\n",
    "#Main programe\n",
    "\n",
    "def main():\n",
    "    print(\"Welcome to State Bank of India\")\n",
    "    login()\n",
    "    bank_account = Account()\n",
    "\n",
    "    while True:\n",
    "         print(\"\\nSelect an option:\")\n",
    "         print(\"1. Deposit Money\")\n",
    "         print(\"2. Withdrawal Money\")\n",
    "         print(\"3. Display Balance\")\n",
    "         print(\"4. Exit\")\n",
    "         \n",
    "         choice = input(\"Enter your choice (1/2/3/4): \")\n",
    "        \n",
    "         if choice == '1':\n",
    "              bank_account.Desposit()\n",
    "         elif choice == '2':\n",
    "              bank_account.Withdrawal()\n",
    "         elif choice == '3':\n",
    "              bank_account.Display_Balance()\n",
    "         elif choice == '4':\n",
    "              print(\"Thank you for using the State Bank of India.\")\n",
    "              break\n",
    "         else:\n",
    "              print(\"Invalid choice. Please try again.\")\n",
    "             \n",
    "main() # Call the main function     "
